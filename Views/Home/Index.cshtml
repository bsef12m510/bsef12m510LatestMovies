                                    </div>
                                </div>
                                <script>



                                    $(document).ready(function () {
                                        $('#category').prop('selectedIndex', 0);
                                        $('#genreContainer').hide();
                                        $('#g_ratingContainer').hide();
                                        $('#ratingContainer').hide();
                                        $('#artistContainer').hide();


                                    });

                                    $(function () {
                                        $('#search').click(function () {
                                            //$('#genre').empty();
                                            // $('#genreContainer').hide();
                                            //$('#artistContainer').hide();
                                           // $('#ratingContainer').hide();
                                           // $('#g_ratingContainer').hide();

                                        })
                                    });

                                    $(function () {
                                        $('#close').click(function () {
                                            $('#genre').empty();
                                            $('#genreContainer').hide();
                                            $('#artistContainer').hide();
                                            $('#ratingContainer').hide();
                                            $('#g_ratingContainer').hide();
                                            $('#category').prop('selectedIndex', 0);

                                        })
                                    });

                                    $(function () {
                                        $('#cancel').click(function () {
                                            $('#genre').empty();
                                            $('#genreContainer').hide();
                                            $('#artistContainer').hide();
                                            $('#ratingContainer').hide();
                                            $('#g_ratingContainer').hide();
                                            $('#category').prop('selectedIndex', 0);
                                        })
                                    });

                                    $(function () {
                                        $('#category').change(function () {
                                            var categoryId = $(this).val();
                                            $.getJSON('/Search/GetGenres?cat=' + categoryId, function (genre) {
                                                var genreSelect = $('#genre');
                                                genreSelect.empty();
                                                //genreSelect.append(
                                                //        $('<option/>')
                                                //            .attr('value', '')
                                                //            .text('--Select Genre--'));
                                                $.each(genre, function (index, category) {
                                                    genreSelect.append(
                                                        $('<option/>')
                                                            .attr('value', category.genre)
                                                            .text(category.genre)
                                                    );
                                                });

                                                $('#genre').prop('selectedIndex', 0);
                                            });

                                            if (categoryId === "MOVIE" || categoryId === "SEASON") {
                                                $('#g_ratingContainer').hide();
                                                $('#artistContainer').hide();
                                                $('#genreContainer').show();
                                                $('#ratingContainer').show();

                                            }
                                            else if (categoryId === "SONG") {
                                                $.getJSON('/Search/GetSongArtists', function (artist) {
                                                    var artistSelect = $('#artist');
                                                    artistSelect.empty();
                                                    //artistSelect.append(
                                                    //        $('<option/>')
                                                    //            .attr('value', '')
                                                    //            .text('--Select Artist--'));
                                                    $.each(artist, function (index, art) {
                                                        artistSelect.append(
                                                            $('<option/>')
                                                                .attr('value', art)
                                                                .text(art)
                                                        );
                                                    });
                                                });
                                                $('#artist').prop('selectedIndex', 0);
                                                $('#g_ratingContainer').hide();
                                                $('#ratingContainer').hide();
                                                $('#genreContainer').show();
                                                $('#artistContainer').show();
                                            }
                                            else if (categoryId === "GAME") {
                                                $('#artistContainer').hide();
                                                $('#ratingContainer').hide();
                                                $('#genreContainer').show();
                                                $('#g_ratingContainer').show();
                                            }
                                            else {
                                                $('#artistContainer').hide();
                                                $('#ratingContainer').hide();
                                                $('#genreContainer').hide();
                                                $('#g_ratingContainer').hide();
                                            }
                                        });
                                    });


                                </script>

                            </div>
                        </div>
                    </form>

