@model Project.Models.User

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Update Profile</title>
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body style="background-image:url(/Content/images/bg.jpg)">
    @if (ViewData["Message"] != null)
    {
        <script language="javascript">
            alert('@ViewData["Message"]');
        </script>
    }

    <div class="container">
        <div class="row text-center pad-top ">
            <div class="col-md-12">
                <h2 style="color:#337AB7">Update your information</h2>
            </div>
        </div>
        <div class="row  pad-top">

            <div class="col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="panel panel-primary" style="border-color:#2e2e2f">
                    <div class="panel-heading" style="background-color:#1b1b1b ; border-color:#1e1e1f">
                        <strong>   Update information </strong>
                    </div>
                    <div class="panel-body" style="background-color:#2c2b2b">
                        <form role="form" action="/Profile/Updated" method="post">
                            <br />
                            @Html.Hidden("id", @Model.id)
                            @Html.Hidden("usename", @Model.usename)
                            @Html.Hidden("type","USER")
                            @Html.Hidden("downloads", @Model.downloads)
                            @Html.Hidden("posts", @Model.posts)
                            @Html.Hidden("likes", @Model.likes)
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-circle-o-notch"></i></span>
                                <input type="text" class="form-control" placeholder="Your Name" name="name" value="@Model.name" required />
                            </div>
                            
                            <div class="form-group input-group">
                                <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                                <input type="email" class="form-control" placeholder="Your Email" name="email" value="@Model.email" required />
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input type="text" class="form-control" placeholder="Enter Password" name="password" value="@Model.password" required />
                            </div>
                            @*<div class="form-group input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    <input type="password" class="form-control" placeholder="Retype Password" />
                                </div>*@

                            <input type="submit" class="btn btn-success" value="Update"><hr />

                        </form>
                    </div>

                </div>
            </div>


        </div>
    </div>
    @*<script src="~/js/jquery.js"></script>
    
    <script src="~/js/bootstrap.js"></script>*@
</body>

