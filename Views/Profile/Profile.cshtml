@model Project.Models.User

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Update Profile</title>
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body style="background-image:url(/Content/images/bg.jpg)">
    @if (ViewData["Message"] != null)
    {
        <script language="javascript">
            alert('@ViewData["Message"]');
        </script>
    }

    <div class="container">
        <div class="row text-center pad-top ">
            <div class="col-md-12">
                <h2 style="color:#337AB7">Your Profile</h2>
            </div>
        </div>
        <div class="row  pad-top">

            <div class="col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="panel panel-primary" style="border-color:#2e2e2f">
                    <div class="panel-heading" style="background-color:#1b1b1b ; border-color:#1e1e1f">
                        <strong>   Profile </strong>
                    </div>
                    <div class="panel-body" style="background-color:#2c2b2b;color:#fff">


                        <br />

                        <div class="form-group input-group">

                          <h4>  Name : @Model.name</h4>
                        </div>

                        <div class="form-group input-group">
                           <h4> Username : @Model.usename</h4>
                        </div>
                        <div class="form-group input-group">
                            <h4>  Email address : @Model.email </h4>
                        </div>
                        
                            <form role="form" action="/Profile/Update" method="post">
                                <input type="submit" class="btn btn-success" value="Update Profile"><hr />

                            </form>
                        
                        
                        <div class="form-group input-group">
                            <h3>  Statistics </h3>
                            <h4>Torrent Files Downloaded : @Model.downloads</h4>
                            <h4>Comments Posted: @Model.posts</h4>
                            <h4>Comments Liked : @Model.likes</h4>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>
    @*<script src="~/js/jquery.js"></script>
   
    <script src="~/js/bootstrap.js"></script>*@
</body>
